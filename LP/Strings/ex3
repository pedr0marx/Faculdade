#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main(){
    char nome[20];
    printf("Digite seu nome: ");
    fgets(nome, sizeof(nome), stdin);
    int tamanho = strlen(nome) - 1 ; // tamanho da string é a quantidade de caractéres menos 1 (operador \0)

    for(int i = 0; i < tamanho; i++){
        printf("%c\n", toupper(nome[i]));
    }
    
    return 0;
}
